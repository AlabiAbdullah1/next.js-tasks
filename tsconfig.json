{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/pages/task.js",
    "src/models/user.js",
    "src/models/task.js",
    "src/pages/api/tasks/index.js",
    "src/pages/api/auth/signup.js",
    "src/pages/api/auth/login.js",
    "src/app/layout.js",
    "src/app/page.js"
  ],
  "exclude": ["node_modules"]
}
